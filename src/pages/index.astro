import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Chatbot from '../components/Chatbot.astro';
import Carousel from '../components/Carousel.astro';
import Gallery from '../components/Gallery.astro';
import DirectiveTeam from '../components/DirectiveTeam.astro';
import AdmissionsProcess from '../components/AdmissionsProcess.astro';
---

<Layout title="Colegio Militar General Santander - Formando Líderes">
  <Header />
  
  <!-- Hero Section with Video -->
  <section id="inicio" class="relative min-h-screen flex items-center justify-center overflow-hidden" style="padding-top: 120px;">
    <!-- Video Background Container -->
    <div id="video-container" class="absolute inset-0 w-full h-full z-10">
      <!-- Preloader -->
      <div id="video-preloader" class="absolute inset-0 bg-gray-900 flex items-center justify-center z-20">
        <div class="text-center text-white">
          <div class="w-16 h-16 border-4 border-white border-t-transparent rounded-full animate-spin mx-auto mb-4"></div>
          <p class="text-lg font-semibold">Cargando experiencia...</p>
          <p class="text-sm text-gray-300 mt-2">Preparando contenido institucional</p>
        </div>
      </div>
      
      <!-- Vimeo Video Background -->
      <div class="absolute inset-0 w-full h-full">
        <iframe 
          id="hero-video"
          src="https://player.vimeo.com/video/1087000149?h=a7816f7589&badge=0&autopause=0&player_id=0&app_id=58479&autoplay=1&loop=0&muted=1&controls=0&background=1&byline=0&title=0&portrait=0"
          frameborder="0" 
          allow="autoplay; fullscreen; picture-in-picture; clipboard-write; encrypted-media" 
          class="absolute inset-0 w-full h-full"
          style="width: 100%; height: 100%; object-fit: cover; transform: scale(1.05);"
          title="Video Institucional CMGS"
        ></iframe>
      </div>
      
      <!-- Video Overlay for transition -->
      <div id="video-overlay" class="absolute inset-0 bg-black/0 transition-all duration-1000"></div>
    </div>
    
    <!-- Fallback Gradient (hidden initially) -->
    <div id="fallback-gradient" class="absolute inset-0 hidden" style="background: linear-gradient(135deg, rgb(52, 183, 13) 0%, #5771FE 50%, #dc3545 100%);">
      <div class="absolute inset-0 bg-black/20"></div>
    </div>
    
    <!-- Content Container -->
    <div id="hero-content" class="relative z-30 container mx-auto px-4 text-center text-white opacity-0 transition-all duration-1000">
      <div class="animate-fade-in-up">
        <div class="mb-8">
          <div class="w-32 h-32 mx-auto mt-10 bg-white/10 backdrop-blur-sm rounded-full flex items-center justify-center border-4 border-white/30">
            <img src={`${import.meta.env.BASE_URL}/label-removebg-preview.webp`} alt="escudo del colegio">
          </div>
          <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold font-playfair mb-4 text-shadow-lg">
            Colegio Militar
            <span class="block text-yellow-300">General Santander</span>
          </h1>
          <div class="w-32 h-1 bg-yellow-300 mx-auto mb-6"></div>
          <p class="text-xl md:text-2xl lg:text-3xl font-semibold mb-4 text-shadow-md">
            "Patria, Superación y Orden"
          </p>
          <p class="text-lg md:text-xl text-gray-200 max-w-3xl mx-auto mb-8 text-shadow-sm">
            59 años formando líderes con responsabilidad social. Institución educativa con énfasis militar 
            que ofrece formación integral desde Preescolar hasta Media Vocacional.
          </p>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#admisiones" class="bg-yellow-500 text-black px-8 py-4 rounded-lg font-bold text-lg hover:bg-yellow-400 transition-all duration-300 transform hover:scale-105 shadow-lg">
            Proceso de Admisiones
          </a>
          <a href="#nosotros" class="border-2 border-white text-white px-8 py-4 rounded-lg font-bold text-lg hover:bg-white hover:text-blue-900 transition-all duration-300 shadow-lg">
            Conoce Más
          </a>
        </div>
      </div>
    </div>
    
    <!-- Scroll indicator -->
    <div id="scroll-indicator" class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-30 opacity-0 transition-all duration-1000">
      <div class="animate-bounce">
        <svg class="w-6 h-6 text-white filter drop-shadow-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
