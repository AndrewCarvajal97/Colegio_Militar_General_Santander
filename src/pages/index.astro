<!-- Video Management Script -->
<script src="https://player.vimeo.com/api/player.js"></script>
<script>
  // Video Hero Section Management
  document.addEventListener('DOMContentLoaded', function() {
    // Elementos del DOM
    const videoContainer = document.getElementById('video-container');
    const videoPreloader = document.getElementById('video-preloader');
    const heroVideo = document.getElementById('hero-video');
    const videoOverlay = document.getElementById('video-overlay');
    const heroContent = document.getElementById('hero-content');
    const scrollIndicator = document.getElementById('scroll-indicator');
    const fallbackGradient = document.getElementById('fallback-gradient');
    
    // Variables de control
    let videoPlayer;
    let videoLoaded = false;
    let contentShown = false;
    let videoStarted = false;
    
    // Timeout IDs para poder cancelarlos si es necesario
    let contentTimeoutId;
    let preloaderTimeoutId;
    let initTimeoutId;
    
    // Configuraci√≥n del reproductor Vimeo
    function initializeVimeoPlayer() {
      try {
        // Crear instancia del player con el iframe
        videoPlayer = new Vimeo.Player(heroVideo);
        
        // Configurar eventos del reproductor
        videoPlayer.ready().then(function() {
          console.log('‚úÖ Video Vimeo cargado correctamente');
          videoLoaded = true;
          hidePreloader();
          startVideoSequence();
          
          // Asegurar que el video est√© reproduci√©ndose
          return videoPlayer.play();
        }).then(function() {
          console.log('‚ñ∂Ô∏è Video iniciado');
          videoStarted = true;
        }).catch(function(error) {
          console.error('‚ùå Error al cargar/reproducir video Vimeo:', error);
          handleVideoError();
        });
        
        // Evento cuando el video termina
        videoPlayer.on('ended', function() {
          console.log('üé¨ Video terminado - se mantiene pausado');
        });
        
        // Evento de error
        videoPlayer.on('error', function(error) {
          console.error('‚ùå Error durante reproducci√≥n:', error);
          handleVideoError();
        });
        
        // Evento cuando empieza a reproducir
        videoPlayer.on('play', function() {
          console.log('üé• Video reproduciendo');
          videoStarted = true;
        });
        
      } catch (error) {
        console.error('‚ùå Error al inicializar Vimeo Player:', error);
        handleVideoError();
      }
    }
    
    // Ocultar preloader
    function hidePreloader() {
      if (videoPreloader) {
        videoPreloader.style.opacity = '0';
        setTimeout(() => {
          videoPreloader.style.display = 'none';
        }, 500);
      }
    }
    
    // Iniciar secuencia del video
    function startVideoSequence() {
      if (!videoLoaded) return;
      
      console.log('üé• Iniciando secuencia del video...');
      
      // Detectar si el usuario est√° en mobile para ajustar timing
      const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
      const introTime = isMobile ? 6000 : 10000; // 6s m√≥vil, 10s desktop
      
      console.log(`üì± Dispositivo: ${isMobile ? 'M√≥vil' : 'Desktop'} - Intro: ${introTime/1000}s`);
      
      // Despu√©s del tiempo especificado: difuminar video y mostrar contenido
      contentTimeoutId = setTimeout(() => {
        showContentOverVideo();
      }, introTime);
    }
    
    // Mostrar contenido sobre el video difuminado
    function showContentOverVideo() {
      if (contentShown) return;
      
      console.log('üìù Mostrando contenido sobre video difuminado...');
      contentShown = true;
      
      // Animar video al fondo con blur
      if (videoContainer) {
        videoContainer.style.zIndex = '5';
        videoContainer.style.transition = 'all 1s ease-in-out';
      }
      
      if (videoOverlay) {
        videoOverlay.style.backgroundColor = 'rgba(0, 0, 0, 0.5)';
        videoOverlay.style.backdropFilter = 'blur(4px)';
        videoOverlay.style.webkitBackdropFilter = 'blur(4px)';
      }
      
      if (heroVideo) {
        heroVideo.style.filter = 'blur(2px) brightness(0.7)';
        heroVideo.style.transform = 'scale(1.08)';
      }
      
      // Mostrar contenido con animaci√≥n
      if (heroContent) {
        heroContent.style.opacity = '1';
        heroContent.style.transform = 'translateY(0)';
      }
      
      // Mostrar indicador de scroll
      if (scrollIndicator) {
        setTimeout(() => {
          scrollIndicator.style.opacity = '1';
        }, 800);
      }
    }
    
    // Manejar errores del video
    function handleVideoError() {
      console.warn('‚ö†Ô∏è Fallback: Usando degradado en lugar del video');
      
      // Ocultar elementos del video
      if (videoContainer) {
        videoContainer.style.display = 'none';
      }
      
      // Mostrar degradado de respaldo
      if (fallbackGradient) {
        fallbackGradient.classList.remove('hidden');
        fallbackGradient.style.zIndex = '5';
      }
      
      // Mostrar contenido inmediatamente
      if (heroContent) {
        heroContent.style.opacity = '1';
        heroContent.style.zIndex = '10';
      }
      
      if (scrollIndicator) {
        scrollIndicator.style.opacity = '1';
      }
      
      // Ocultar preloader
      hidePreloader();
    }
    
    // Preloader timeout (fallback si el video no carga)
    preloaderTimeoutId = setTimeout(() => {
      if (!videoLoaded) {
        console.warn('‚è∞ Timeout: Video tard√≥ demasiado en cargar');
        handleVideoError();
      }
    }, 10000); // 10 segundos m√°ximo de espera
    
    // Detectar si el usuario hace scroll durante la intro
    let hasScrolled = false;
    function handleScroll() {
      if (!hasScrolled && window.scrollY > 100) {
        hasScrolled = true;
        console.log('üìú Usuario hizo scroll, mostrando contenido...');
        
        // Cancelar timeout si a√∫n no se ha ejecutado
        if (contentTimeoutId) {
          clearTimeout(contentTimeoutId);
        }
        
        // Mostrar contenido inmediatamente
        if (!contentShown) {
          showContentOverVideo();
        }
      }
    }
    
    // Event listeners
    window.addEventListener('scroll', handleScroll, { passive: true });
    
    // Inicializar despu√©s de un peque√±o delay
    initTimeoutId = setTimeout(() => {
      initializeVimeoPlayer();
    }, 1000); // 1 segundo para asegurar que el iframe se haya cargado
    
    // Fallback adicional: Si despu√©s de 3 segundos no hay video, mostrar contenido
    setTimeout(() => {
      if (!videoStarted && !contentShown) {
        console.log('‚ö° Fallback r√°pido: Mostrando contenido sin esperar video');
        showContentOverVideo();
      }
    }, 3000);
    
    // Cleanup en caso de que el usuario salga de la p√°gina
    window.addEventListener('beforeunload', function() {
      if (contentTimeoutId) clearTimeout(contentTimeoutId);
      if (preloaderTimeoutId) clearTimeout(preloaderTimeoutId);
      if (initTimeoutId) clearTimeout(initTimeoutId);
      if (videoPlayer) {
        try {
          videoPlayer.pause();
        } catch (e) {
          console.log('Video cleanup:', e);
        }
      }
    });
    
    // Debug: Informaci√≥n del estado
    setTimeout(() => {
      console.log('üîç Estado del video:', {
        videoLoaded,
        videoStarted,
        contentShown,
        hasScrolled
      });
    }, 5000);
  });
</script>

