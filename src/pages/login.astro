---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Iniciar Sesión - Colegio Militar General Santander">
  <Header />
  
  <!-- Login Section -->
  <section class="min-h-screen flex items-center justify-center py-20 px-4" style="background: linear-gradient(135deg, rgb(52, 183, 13) 0%, #5771FE 50%, #dc3545 100%);">
    <div class="absolute inset-0 bg-black/20"></div>
    
    <div class="relative z-10 w-full max-w-md">
      <!-- Logo y título -->
      <div class="text-center mb-8">
        <div class="w-20 h-20 mx-auto mb-6 bg-white/10 backdrop-blur-sm rounded-full flex items-center justify-center border-4 border-white/30">
          <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h1 class="text-3xl font-bold text-white mb-2 font-playfair">Portal Académico</h1>
        <p class="text-white/80 text-lg">Colegio Militar General Santander</p>
        <p class="text-white/60 text-sm mt-1">"Patria, Superación y Orden"</p>
      </div>

      <!-- Formulario de Login -->
      <div class="bg-white/10 backdrop-blur-lg rounded-2xl shadow-2xl p-8 border border-white/20">
        <form id="login-form" class="space-y-6">
          <!-- Tipo de usuario -->
          <div>
            <label class="block text-white font-medium mb-3">Tipo de Usuario</label>
            <div class="grid grid-cols-3 gap-2">
              <button type="button" class="user-type-btn active" data-type="estudiante">
                <svg class="w-5 h-5 mb-1" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3z"></path>
                </svg>
                <span class="text-xs">Estudiante</span>
              </button>
              <button type="button" class="user-type-btn" data-type="padre">
                <svg class="w-5 h-5 mb-1" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"></path>
                </svg>
                <span class="text-xs">Padre</span>
              </button>
              <button type="button" class="user-type-btn" data-type="docente">
                <svg class="w-5 h-5 mb-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-xs">Docente</span>
              </button>
            </div>
          </div>

          <!-- Usuario -->
          <div>
            <label class="block text-white font-medium mb-2">Usuario</label>
            <div class="relative">
              <input 
                type="text" 
                id="username"
                class="w-full px-4 py-3 pl-12 bg-white/10 border border-white/30 rounded-lg focus:ring-2 focus:ring-white/50 focus:border-white/50 text-white placeholder-white/60 transition-all duration-300" 
                placeholder="Número de documento o usuario"
                required
              >
              <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-white/60" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          
          <!-- Contraseña -->
          <div>
            <label class="block text-white font-medium mb-2">Contraseña</label>
            <div class="relative">
              <input 
                type="password" 
                id="password"
                class="w-full px-4 py-3 pl-12 pr-12 bg-white/10 border border-white/30 rounded-lg focus:ring-2 focus:ring-white/50 focus:border-white/50 text-white placeholder-white/60 transition-all duration-300" 
                placeholder="Ingrese su contraseña"
                required
              >
              <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-white/60" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
              </svg>
              <button type="button" id="toggle-password" class="absolute right-4 top-1/2 transform -translate-y-1/2 text-white/60 hover:text-white/80 transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                  <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
                </svg>
              </button>
            </div>
          </div>
          
          <!-- Opciones adicionales -->
          <div class="flex items-center justify-between">
            <label class="flex items-center text-white/80">
              <input type="checkbox" class="rounded border-white/30 bg-white/10 text-white focus:ring-white/50 mr-2">
              <span class="text-sm">Recordarme</span>
            </label>
            <a href="/recuperar-password" class="text-sm text-white/80 hover:text-white underline transition-colors">
              ¿Olvidaste tu contraseña?
            </a>
          </div>
          
          <!-- Botón de login -->
          <button 
            type="submit" 
            class="w-full text-white py-3 rounded-lg font-bold text-lg transition-all duration-300 transform hover:scale-105 flex items-center justify-center space-x-2"
            style="background-color: rgba(255, 255, 255, 0.2); backdrop-filter: blur(10px);"
            onmouseover="this.style.backgroundColor='rgba(255, 255, 255, 0.3)'" 
            onmouseout="this.style.backgroundColor='rgba(255, 255, 255, 0.2)'"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 3a1 1 0 011 1v12a1 1 0 11-2 0V4a1 1 0 011-1zm7.707 3.293a1 1 0 010 1.414L9.414 9H17a1 1 0 110 2H9.414l1.293 1.293a1 1 0 01-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>Iniciar Sesión</span>
          </button>
        </form>
        
        <!-- Enlaces adicionales -->
        <div class="mt-6 text-center space-y-3">
          <div class="border-t border-white/20 pt-4">
            <p class="text-white/80 text-sm mb-3">¿No tienes cuenta?</p>
            <div class="grid grid-cols-1 gap-2">
              <a href="/contactar-institucion" class="text-white/90 hover:text-white text-sm underline transition-colors">
                📞 Contactar a la institución
              </a>
              <a href="#admisiones" class="text-white/90 hover:text-white text-sm underline transition-colors">
                📋 Proceso de admisiones
              </a>
            </div>
          </div>
          
          <!-- Acceso directo a portal -->
          <div class="border-t border-white/20 pt-4">
            <p class="text-white/60 text-xs mb-2">¿Problemas para acceder?</p>
            <button 
              id="direct-portal" 
              class="text-white/80 hover:text-white text-sm underline transition-colors"
            >
              🌐 Ir directamente al portal Phidias
            </button>
          </div>
        </div>
      </div>

      <!-- Información de contacto rápida -->
      <div class="mt-6 text-center text-white/60 text-xs">
        <p>📞 (607) 7008460 Ext - 2006 | 📧 info@colmilgeneralsantander.edu.co</p>
        <p class="mt-1">Horarios: Lunes a Viernes 7:00 AM - 5:30 PM</p>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .user-type-btn {
    @apply flex flex-col items-center justify-center p-3 bg-white/10 border border-white/30 rounded-lg text-white/70 text-center transition-all duration-300 hover:bg-white/20 hover:text-white;
  }
  
  .user-type-btn.active {
    @apply bg-white/20 text-white border-white/50;
  }
  
  /* Efectos de input */
  input:focus {
    background-color: rgba(255, 255, 255, 0.15) !important;
  }
  
  /* Animaciones */
  .animate-fade-in {
    animation: fadeIn 0.6s ease-out;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Manejo de tipos de usuario
    const userTypeBtns = document.querySelectorAll('.user-type-btn');
    const usernameInput = document.getElementById('username');
    
    userTypeBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        // Remover clase active de todos
        userTypeBtns.forEach(b => b.classList.remove('active'));
        // Agregar a este botón
        this.classList.add('active');
        
        // Cambiar placeholder según tipo
        const type = this.dataset.type;
        if (type === 'estudiante') {
          usernameInput.placeholder = 'Número de documento del estudiante';
        } else if (type === 'padre') {
          usernameInput.placeholder = 'Número de documento del padre';
        } else if (type === 'docente') {
          usernameInput.placeholder = 'Usuario o número de documento';
        }
      });
    });
    
    // Toggle password visibility
    const togglePassword = document.getElementById('toggle-password');
    const passwordInput = document.getElementById('password');
    
    togglePassword?.addEventListener('click', function() {
      const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
      passwordInput.setAttribute('type', type);
      
      // Cambiar icono
      if (type === 'text') {
        togglePassword.innerHTML = `
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3.707 2.293a1 1 0 00-1.414 1.414l14 14a1 1 0 001.414-1.414l-1.473-1.473A10.014 10.014 0 0019.542 10C18.268 5.943 14.478 3 10 3a9.958 9.958 0 00-4.512 1.074l-1.78-1.781zm4.261 4.26l1.514 1.515a2.003 2.003 0 012.45 2.45l1.514 1.514a4 4 0 00-5.478-5.478z" clip-rule="evenodd"></path>
            <path d="M12.454 16.697L9.75 13.992a4 4 0 01-3.742-3.741L2.335 6.578A9.98 9.98 0 00.458 10c1.274 4.057 5.065 7 9.542 7 .847 0 1.669-.105 2.454-.303z"></path>
          </svg>
        `;
      } else {
        togglePassword.innerHTML = `
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
            <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
          </svg>
        `;
      }
    });
    
    // Formulario de login
    document.getElementById('login-form')?.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const username = document.getElementById('username').value;
      const password = document.getElementById('password').value;
      const userType = document.querySelector('.user-type-btn.active').dataset.type;
      
      if (username && password) {
        // Mostrar loading
        const submitBtn = e.target.querySelector('button[type="submit"]');
        const originalContent = submitBtn.innerHTML;
        submitBtn.innerHTML = `
          <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          Iniciando sesión...
        `;
        submitBtn.disabled = true;
        
        // Simular autenticación
        setTimeout(() => {
          alert(`Accediendo como ${userType}...\nRedirigiendo al portal Phidias.`);
          window.open('https://colmilgeneralsantander.phidias.co/', '_blank');
          
          // Restaurar botón
          submitBtn.innerHTML = originalContent;
          submitBtn.disabled = false;
        }, 2000);
      }
    });
    
    // Portal directo
    document.getElementById('direct-portal')?.addEventListener('click', function() {
      window.open('https://colmilgeneralsantander.phidias.co/', '_blank');
    });
    
    // Efecto de aparición
    setTimeout(() => {
      document.querySelector('section').classList.add('animate-fade-in');
    }, 100);
  });
</script>
