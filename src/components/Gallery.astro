---
// Gallery component con filtros por categorías
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold font-playfair text-military-blue mb-4">
        Galería Institucional
      </h2>
      <div class="w-24 h-1 bg-yellow-500 mx-auto mb-6"></div>
      <p class="text-gray-600 max-w-2xl mx-auto mb-8">
        Explora los momentos más destacados de nuestra comunidad educativa
      </p>
    </div>

    <!-- Filtros de categorías -->
    <div class="flex flex-wrap justify-center gap-4 mb-12">
      <button 
        class="filter-btn active px-6 py-3 rounded-full font-medium transition-all duration-300 hover:scale-105"
        data-filter="all"
        style="background-color: rgb(52, 183, 13); color: white;"
      >
        Todas
      </button>
      <button 
        class="filter-btn px-6 py-3 rounded-full font-medium transition-all duration-300 hover:scale-105 bg-white text-gray-700 border-2 border-gray-200 hover:border-blue-400"
        data-filter="academicas"
      >
        Actividades Académicas
      </button>
      <button 
        class="filter-btn px-6 py-3 rounded-full font-medium transition-all duration-300 hover:scale-105 bg-white text-gray-700 border-2 border-gray-200 hover:border-purple-400"
        data-filter="deportivas"
      >
        Deportivas
      </button>
      <button 
        class="filter-btn px-6 py-3 rounded-full font-medium transition-all duration-300 hover:scale-105 bg-white text-gray-700 border-2 border-gray-200"
        data-filter="culturales"
        style="border-color: #5771FE;"
      >
        Culturales
      </button>
      <button 
        class="filter-btn px-6 py-3 rounded-full font-medium transition-all duration-300 hover:scale-105 bg-white text-gray-700 border-2 border-gray-200 hover:border-red-400"
        data-filter="militares"
      >
        Formación Militar
      </button>
      <button 
        class="filter-btn px-6 py-3 rounded-full font-medium transition-all duration-300 hover:scale-105 bg-white text-gray-700 border-2 border-gray-200 hover:border-yellow-400"
        data-filter="eventos"
      >
        Eventos Especiales
      </button>
    </div>

    <!-- Grid de la galería -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6" id="gallery-grid">
      
      <!-- Actividades Académicas -->
      <div class="gallery-item academicas card-hover" data-category="academicas">
        <div class="bg-white rounded-xl overflow-hidden shadow-lg group">
          <div class="aspect-square bg-gradient-to-br from-blue-400 to-blue-600 relative overflow-hidden">
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center text-white">
                <svg class="w-12 h-12 mx-auto mb-2 opacity-80" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"></path>
                </svg>
                <p class="text-sm font-medium">Laboratorio de Ciencias</p>
              </div>
            </div>
            <div class="absolute top-3 left-3 bg-blue-500 text-white px-2 py-1 rounded text-xs font-medium">
              Académico
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-800 mb-2">Clase de Química</h3>
            <p class="text-sm text-gray-600">Estudiantes realizando experimentos en el laboratorio</p>
          </div>
        </div>
      </div>

      <div class="gallery-item academicas" data-category="academicas">
        <div class="bg-white rounded-xl overflow-hidden shadow-lg group">
          <div class="aspect-square bg-gradient-to-br from-indigo-400 to-indigo-600 relative overflow-hidden">
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center text-white">
                <svg class="w-12 h-12 mx-auto mb-2 opacity-80" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm8 0a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1h-6a1 1 0 01-1-1V8z" clip-rule="evenodd"></path>
                </svg>
                <p class="text-sm font-medium">Aula de Matemáticas</p>
              </div>
            </div>
            <div class="absolute top-3 left-3 bg-blue-500 text-white px-2 py-1 rounded text-xs font-medium">
              Académico
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-800 mb-2">Clase Magistral</h3>
            <p class="text-sm text-gray-600">Desarrollo de competencias matemáticas</p>
          </div>
        </div>
      </div>

      <!-- Actividades Deportivas -->
      <div class="gallery-item deportivas" data-category="deportivas">
        <div class="bg-white rounded-xl overflow-hidden shadow-lg group">
          <div class="aspect-square bg-gradient-to-br from-green-400 to-green-600 relative overflow-hidden">
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center text-white">
                <svg class="w-12 h-12 mx-auto mb-2 opacity-80" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 2L3 7v11a1 1 0 001 1h3a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1h3a1 1 0 001-1V7l-7-5z"></path>
                </svg>
                <p class="text-sm font-medium">Torneo de Fútbol</p>
              </div>
            </div>
            <div class="absolute top-3 left-3 text-white px-2 py-1 rounded text-xs font-medium" style="background-color: rgb(52, 183, 13);">
              Deportivo
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-800 mb-2">Intercolegiados 2024</h3>
            <p class="text-sm text-gray-600">Participación en competencias deportivas</p>
          </div>
        </div>
      </div>

      <div class="gallery-item deportivas" data-category="deportivas">
        <div class="bg-white rounded-xl overflow-hidden shadow-lg group">
          <div class="aspect-square bg-gradient-to-br from-teal-400 to-teal-600 relative overflow-hidden">
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center text-white">
                <svg class="w-12 h-12 mx-auto mb-2 opacity-80" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"></path>
                </svg>
                <p class="text-sm font-medium">Educación Física</p>
              </div>
            </div>
            <div class="absolute top-3 left-3 text-white px-2 py-1 rounded text-xs font-medium" style="background-color: rgb(52, 183, 13);">
              Deportivo
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-800 mb-2">Actividad Física</h3>
            <p class="text-sm text-gray-600">Desarrollo de habilidades motoras</p>
          </div>
        </div>
      </div>

      <!-- Actividades Culturales -->
      <div class="gallery-item culturales" data-category="culturales">
        <div class="bg-white rounded-xl overflow-hidden shadow-lg group">
          <div class="aspect-square bg-gradient-to-br from-purple-400 to-purple-600 relative overflow-hidden">
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center text-white">
                <svg class="w-12 h-12 mx-auto mb-2 opacity-80" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"></path>
                </svg>
                <p class="text-sm font-medium">Banda Musical</p>
              </div>
            </div>
            <div class="absolute top-3 left-3 bg-purple-500 text-white px-2 py-1 rounded text-xs font-medium">
              Cultural
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-800 mb-2">Presentación Musical</h3>
            <p class="text-sm text-gray-600">Banda marcial en evento institucional</p>
          </div>
        </div>
      </div>

      <div class="gallery-item culturales" data-category="culturales">
        <div class="bg-white rounded-xl overflow-hidden shadow-lg group">
          <div class="aspect-square bg-gradient-to-br from-pink-400 to-pink-600 relative overflow-hidden">
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center text-white">
                <svg class="w-12 h-12 mx-auto mb-2 opacity-80" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
                </svg>
                <p class="text-sm font-medium">Festival de Arte</p>
              </div>
            </div>
            <div class="absolute top-3 left-3 bg-purple-500 text-white px-2 py-1 rounded text-xs font-medium">
              Cultural
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-800 mb-2">Exposición Artística</h3>
            <p class="text-sm text-gray-600">Trabajos creativos de los estudiantes</p>
          </div>
        </div>
      </div>

      <!-- Formación Militar -->
      <div class="gallery-item militares" data-category="militares">
        <div class="bg-white rounded-xl overflow-hidden shadow-lg group">
          <div class="aspect-square bg-gradient-to-br from-red-400 to-red-600 relative overflow-hidden">
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center text-white">
                <svg class="w-12 h-12 mx-auto mb-2 opacity-80" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 6a3 3 0 013-3h10a1 1 0 01.8 1.6L14.25 8l2.55 3.4A1 1 0 0116 13H6a1 1 0 00-1 1v3a1 1 0 11-2 0V6z" clip-rule="evenodd"></path>
                </svg>
                <p class="text-sm font-medium">Desfile Militar</p>
              </div>
            </div>
            <div class="absolute top-3 left-3 bg-red-500 text-white px-2 py-1 rounded text-xs font-medium">
              Militar
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-800 mb-2">Formación Disciplinaria</h3>
            <p class="text-sm text-gray-600">Actividades de instrucción militar</p>
          </div>
        </div>
      </div>

      <div class="gallery-item militares" data-category="militares">
        <div class="bg-white rounded-xl overflow-hidden shadow-lg group">
          <div class="aspect-square bg-gradient-to-br from-gray-500 to-gray-700 relative overflow-hidden">
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center text-white">
                <svg class="w-12 h-12 mx-auto mb-2 opacity-80" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <p class="text-sm font-medium">Ceremonia de Grados</p>
              </div>
            </div>
            <div class="absolute top-3 left-3 bg-red-500 text-white px-2 py-1 rounded text-xs font-medium">
              Militar
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-800 mb-2">Graduación Sub-Tenientes</h3>
            <p class="text-sm text-gray-600">Promoción de bachilleres militares</p>
          </div>
        </div>
      </div>

      <!-- Eventos Especiales -->
      <div class="gallery-item eventos" data-category="eventos">
        <div class="bg-white rounded-xl overflow-hidden shadow-lg group">
          <div class="aspect-square bg-gradient-to-br from-yellow-400 to-orange-500 relative overflow-hidden">
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center text-white">
                <svg class="w-12 h-12 mx-auto mb-2 opacity-80" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                </svg>
                <p class="text-sm font-medium">Aniversario 59</p>
              </div>
            </div>
            <div class="absolute top-3 left-3 bg-yellow-500 text-white px-2 py-1 rounded text-xs font-medium">
              Evento
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-800 mb-2">59 Años de Historia</h3>
            <p class="text-sm text-gray-600">Celebración del aniversario institucional</p>
          </div>
        </div>
      </div>

      <div class="gallery-item eventos" data-category="eventos">
        <div class="bg-white rounded-xl overflow-hidden shadow-lg group">
          <div class="aspect-square bg-gradient-to-br from-indigo-500 to-blue-600 relative overflow-hidden">
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center text-white">
                <svg class="w-12 h-12 mx-auto mb-2 opacity-80" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
                </svg>
                <p class="text-sm font-medium">Reunión de Padres</p>
              </div>
            </div>
            <div class="absolute top-3 left-3 bg-yellow-500 text-white px-2 py-1 rounded text-xs font-medium">
              Evento
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-gray-800 mb-2">Encuentro Familiar</h3>
            <p class="text-sm text-gray-600">Integración comunidad educativa</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Mensaje cuando no hay resultados -->
    <div id="no-results" class="hidden text-center py-12">
      <div class="w-24 h-24 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
        <svg class="w-12 h-12 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-gray-600 mb-2">No se encontraron imágenes</h3>
      <p class="text-gray-500">Prueba con otra categoría</p>
    </div>
  </div>
</section>

<script>
  const filterButtons = document.querySelectorAll('.filter-btn');
  const galleryItems = document.querySelectorAll('.gallery-item');
  const noResults = document.getElementById('no-results');
  
  // Colores para los filtros
  const filterColors = {
    all: { bg: 'rgb(52, 183, 13)', text: 'white' },
    academicas: { bg: '#3b82f6', text: 'white' },
    deportivas: { bg: 'rgb(52, 183, 13)', text: 'white' },
    culturales: { bg: '#5771FE', text: 'white' },
    militares: { bg: '#dc3545', text: 'white' },
    eventos: { bg: '#eab308', text: 'white' }
  };
  
  function filterGallery(category) {
    let visibleItems = 0;
    
    galleryItems.forEach(item => {
      const itemCategory = item.getAttribute('data-category');
      
      if (category === 'all' || itemCategory === category) {
        item.style.display = 'block';
        item.style.animation = 'fadeIn 0.5s ease-in-out';
        visibleItems++;
      } else {
        item.style.display = 'none';
      }
    });
    
    // Mostrar/ocultar mensaje de "no resultados"
    if (visibleItems === 0) {
      noResults.classList.remove('hidden');
    } else {
      noResults.classList.add('hidden');
    }
  }
  
  function updateFilterButtons(activeFilter) {
    filterButtons.forEach(btn => {
      const filter = btn.getAttribute('data-filter');
      const colors = filterColors[filter];
      
      if (filter === activeFilter) {
        btn.classList.add('active');
        btn.style.backgroundColor = colors.bg;
        btn.style.color = colors.text;
        btn.style.borderColor = colors.bg;
      } else {
        btn.classList.remove('active');
        btn.style.backgroundColor = 'white';
        btn.style.color = '#374151';
        btn.style.borderColor = '#e5e7eb';
      }
    });
  }
  
  // Event listeners para los filtros
  filterButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      const filter = btn.getAttribute('data-filter');
      filterGallery(filter);
      updateFilterButtons(filter);
    });
    
    // Hover effects
    btn.addEventListener('mouseenter', () => {
      if (!btn.classList.contains('active')) {
        const filter = btn.getAttribute('data-filter');
        const colors = filterColors[filter];
        btn.style.borderColor = colors.bg;
      }
    });
    
    btn.addEventListener('mouseleave', () => {
      if (!btn.classList.contains('active')) {
        btn.style.borderColor = '#e5e7eb';
      }
    });
  });
  
  // Animaciones CSS
  const style = document.createElement('style');
  style.textContent = `
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .gallery-item {
      transition: all 0.3s ease;
    }
    
    .gallery-item:hover {
      transform: translateY(-5px);
    }
  `;
  document.head.appendChild(style);
</script>
