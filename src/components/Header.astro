---
// Header component mejorado con scroll behavior
---

<!-- Header completo con comportamiento de scroll -->
<div class="fixed w-full top-0 z-50 transition-all duration-300" id="complete-header">
  <!-- Navbar principal -->
  <div class="bg-white shadow-lg">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between py-4">
        <!-- Logo y nombre del colegio -->
        <div class="flex items-center space-x-3">
          <div class="w-12 h-12 lg:w-16 lg:h-16 rounded-full flex items-center justify-center" style="background-color: rgb(52, 183, 13);">
            <svg class="w-8 h-8 lg:w-10 lg:h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div>
            <h1 class="text-lg lg:text-xl font-bold font-playfair" style="color: #5771FE;">
              Colegio Militar General Santander
            </h1>
            <p class="text-xs lg:text-sm text-gray-600 font-medium">
              Patria, Superación y Orden
            </p>
          </div>
        </div>

        <!-- Navegación desktop -->
        <nav class="hidden lg:flex items-center space-x-6">
          <a href="#inicio" class="nav-link text-gray-700 font-medium transition-colors duration-300 px-3 py-2 rounded-lg">
            Inicio
          </a>
          <a href="#nosotros" class="nav-link text-gray-700 font-medium transition-colors duration-300 px-3 py-2 rounded-lg">
            Nosotros
          </a>
          <a href="#historia" class="nav-link text-gray-700 font-medium transition-colors duration-300 px-3 py-2 rounded-lg">
            Historia
          </a>
          <a href="#niveles" class="nav-link text-gray-700 font-medium transition-colors duration-300 px-3 py-2 rounded-lg">
            Niveles
          </a>
          <a href="#admisiones" class="nav-link text-gray-700 font-medium transition-colors duration-300 px-3 py-2 rounded-lg">
            Admisiones
          </a>
          <a href="#contacto" class="nav-link text-gray-700 font-medium transition-colors duration-300 px-3 py-2 rounded-lg">
            Contacto
          </a>
          <a href="#contacto" class="text-white px-4 py-2 rounded-lg font-medium transition-all duration-300 hover:scale-105" 
             style="background-color: rgb(52, 183, 13);" 
             onmouseover="this.style.backgroundColor='rgb(42, 153, 11)'" 
             onmouseout="this.style.backgroundColor='rgb(52, 183, 13)'">
            Información
          </a>
          <button id="phidias-login-btn" class="text-white px-4 py-2 rounded-lg font-medium transition-all duration-300 hover:scale-105" 
                  style="background-color: #5771FE;" 
                  onmouseover="this.style.backgroundColor='#4c63d2'" 
                  onmouseout="this.style.backgroundColor='#5771FE'">
            Phidias
          </button>
        </nav>

        <!-- Botón menú móvil -->
        <button class="lg:hidden flex flex-col space-y-1 p-2" id="mobile-menu-btn">
          <span class="w-6 h-0.5 bg-gray-700 transition-all duration-300"></span>
          <span class="w-6 h-0.5 bg-gray-700 transition-all duration-300"></span>
          <span class="w-6 h-0.5 bg-gray-700 transition-all duration-300"></span>
        </button>
      </div>

      <!-- Menú móvil -->
      <div class="lg:hidden hidden" id="mobile-menu">
        <div class="py-4 border-t border-gray-200">
          <nav class="flex flex-col space-y-2">
            <a href="#inicio" class="nav-link text-gray-700 font-medium px-4 py-3 transition-colors duration-300 rounded-lg mx-2">
              Inicio
            </a>
            <a href="#nosotros" class="nav-link text-gray-700 font-medium px-4 py-3 transition-colors duration-300 rounded-lg mx-2">
              Nosotros
            </a>
            <a href="#historia" class="nav-link text-gray-700 font-medium px-4 py-3 transition-colors duration-300 rounded-lg mx-2">
              Historia
            </a>
            <a href="#niveles" class="nav-link text-gray-700 font-medium px-4 py-3 transition-colors duration-300 rounded-lg mx-2">
              Niveles
            </a>
            <a href="#admisiones" class="nav-link text-gray-700 font-medium px-4 py-3 transition-colors duration-300 rounded-lg mx-2">
              Admisiones
            </a>
            <a href="#contacto" class="nav-link text-gray-700 font-medium px-4 py-3 transition-colors duration-300 rounded-lg mx-2">
              Contacto
            </a>
            <a href="#contacto" class="text-white px-4 py-3 rounded-lg font-medium mx-2 mt-2 text-center transition-colors duration-300" style="background-color: rgb(52, 183, 13);">
              Información
            </a>
            <button id="phidias-login-mobile" class="text-white px-4 py-3 rounded-lg font-medium mx-2 mt-1 transition-colors duration-300" style="background-color: #5771FE;">
              Acceso Phidias
            </button>
          </nav>
        </div>
      </div>
    </div>
  </div>

  <!-- Barra de certificaciones (se oculta al hacer scroll) -->
  <div class="bg-gray-100 border-b border-gray-200 py-2 transition-all duration-300" id="certifications-bar">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between text-sm">
        <div class="flex items-center space-x-4">
          <div class="flex items-center space-x-2">
            <span class="text-gray-600 font-medium">Certificaciones:</span>
            <div class="flex items-center space-x-3">
              <div class="flex items-center space-x-2 bg-white px-2 py-1 rounded border shadow-sm">
                <img src="/iso-icon.svg" alt="ISO" class="w-5 h-5" />
                <div class="flex items-center space-x-1">
                  <div class="w-5 h-5 bg-blue-600 rounded flex items-center justify-center">
                    <span class="text-white text-xs font-bold">ISO</span>
                  </div>
                  <span class="text-xs font-medium">9001:2015</span>
                </div>
              </div>
              <div class="flex items-center space-x-2 bg-white px-2 py-1 rounded border shadow-sm">
                <img src="/icontec-icon.svg" alt="ICONTEC" class="w-5 h-5" />
                <div class="flex items-center space-x-1">
                  <div class="w-5 h-5 rounded flex items-center justify-center" style="background-color: rgb(52, 183, 13);">
                    <span class="text-white text-xs font-bold">IC</span>
                  </div>
                  <span class="text-xs font-medium">ICONTEC</span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="hidden md:flex items-center space-x-4 text-xs text-gray-600">
          <span class="flex items-center space-x-1">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
            </svg>
            <span>(607) 7008460</span>
          </span>
          <span class="flex items-center space-x-1">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
            </svg>
            <span>info@colmilgeneralsantander.edu.co</span>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal de Login Phidias -->
<div id="phidias-modal" class="fixed inset-0 bg-black bg-opacity-50 z-[60] hidden">
  <div class="flex items-center justify-center min-h-screen p-4">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md">
      <!-- Header del modal -->
      <div class="p-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 rounded-full flex items-center justify-center" style="background-color: #5771FE;">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-bold" style="color: #5771FE;">Acceso Phidias</h3>
              <p class="text-sm text-gray-600">Portal Académico CMGS</p>
            </div>
          </div>
          <button id="close-modal" class="p-2 hover:bg-gray-100 rounded-full transition-colors">
            <svg class="w-5 h-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Contenido del modal -->
      <div class="p-6">
        <form id="phidias-form" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Usuario</label>
            <input 
              type="text" 
              id="username"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:border-transparent transition-all duration-300" 
              style="focus:ring-color: #5771FE;"
              placeholder="Ingrese su usuario"
              required
            >
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Contraseña</label>
            <div class="relative">
              <input 
                type="password" 
                id="password"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:border-transparent transition-all duration-300" 
                style="focus:ring-color: #5771FE;"
                placeholder="Ingrese su contraseña"
                required
              >
              <button type="button" id="toggle-password" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-gray-700">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                  <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
                </svg>
              </button>
            </div>
          </div>
          
          <div class="flex items-center justify-between">
            <label class="flex items-center">
              <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
              <span class="ml-2 text-sm text-gray-600">Recordarme</span>
            </label>
            <a href="#" class="text-sm hover:underline" style="color: #5771FE;">¿Olvidaste tu contraseña?</a>
          </div>
          
          <button 
            type="submit" 
            class="w-full text-white py-3 rounded-lg font-medium transition-all duration-300 transform hover:scale-105"
            style="background-color: #5771FE;"
            onmouseover="this.style.backgroundColor='#4c63d2'" 
            onmouseout="this.style.backgroundColor='#5771FE'"
          >
            Iniciar Sesión
          </button>
        </form>
        
        <div class="mt-6 text-center">
          <p class="text-sm text-gray-600">¿No tienes cuenta? 
            <a href="#" class="font-medium hover:underline" style="color: #5771FE;">Contacta a la institución</a>
          </p>
        </div>
      </div>
      
      <!-- Footer del modal -->
      <div class="bg-gray-50 px-6 py-4 rounded-b-2xl">
        <div class="flex items-center justify-center space-x-2 text-xs text-gray-500">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
          </svg>
          <span>Conexión segura - Portal académico oficial</span>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .nav-link:hover {
    color: #5771FE !important;
    background-color: rgba(87, 113, 254, 0.1);
  }
  
  /* Animaciones mejoradas */
  .fade-out {
    opacity: 0;
    max-height: 0;
    overflow: hidden;
  }
  
  .fade-in {
    opacity: 1;
    max-height: 100px;
  }
  
  /* Responsive mejoras */
  @media (max-width: 768px) {
    #certifications-bar {
      padding: 8px 0;
    }
    
    #certifications-bar .container > div {
      justify-content: center;
    }
    
    #certifications-bar .hidden {
      display: none !important;
    }
  }
</style>

<script>
  // JavaScript mejorado para el header y modal
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const completeHeader = document.getElementById('complete-header');
    const certificationsBar = document.getElementById('certifications-bar');
    const phidiasBtns = [document.getElementById('phidias-login-btn'), document.getElementById('phidias-login-mobile')];
    const phidiasModal = document.getElementById('phidias-modal');
    const closeModal = document.getElementById('close-modal');
    const togglePassword = document.getElementById('toggle-password');
    const passwordInput = document.getElementById('password');
    
    let lastScrollY = window.scrollY;
    
    // Toggle menú móvil
    mobileMenuBtn?.addEventListener('click', function() {
      mobileMenu.classList.toggle('hidden');
      
      // Animar el botón hamburguesa
      const spans = mobileMenuBtn.querySelectorAll('span');
      if (mobileMenu.classList.contains('hidden')) {
        spans[0].style.transform = 'rotate(0deg)';
        spans[1].style.opacity = '1';
        spans[2].style.transform = 'rotate(0deg)';
      } else {
        spans[0].style.transform = 'rotate(45deg) translate(5px, 5px)';
        spans[1].style.opacity = '0';
        spans[2].style.transform = 'rotate(-45deg) translate(7px, -6px)';
      }
    });
    
    // Comportamiento de scroll mejorado
    window.addEventListener('scroll', function() {
      const currentScrollY = window.scrollY;
      
      if (currentScrollY > 100) {
        // Ocultar certificaciones al hacer scroll
        certificationsBar.classList.add('fade-out');
        certificationsBar.classList.remove('fade-in');
      } else {
        // Mostrar certificaciones cuando se está arriba
        certificationsBar.classList.remove('fade-out');
        certificationsBar.classList.add('fade-in');
      }
      
      lastScrollY = currentScrollY;
    });
    
    // Modal de Phidias
    phidiasBtns.forEach(btn => {
      btn?.addEventListener('click', function() {
        phidiasModal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
        // Focus en el input de usuario
        setTimeout(() => {
          document.getElementById('username')?.focus();
        }, 100);
      });
    });
    
    // Cerrar modal
    closeModal?.addEventListener('click', closePhidiasModal);
    phidiasModal?.addEventListener('click', function(e) {
      if (e.target === phidiasModal) {
        closePhidiasModal();
      }
    });
    
    // Cerrar con Escape
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && !phidiasModal.classList.contains('hidden')) {
        closePhidiasModal();
      }
    });
    
    function closePhidiasModal() {
      phidiasModal.classList.add('hidden');
      document.body.style.overflow = '';
      // Limpiar formulario
      document.getElementById('phidias-form')?.reset();
    }
    
    // Toggle password visibility
    togglePassword?.addEventListener('click', function() {
      const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
      passwordInput.setAttribute('type', type);
      
      // Cambiar icono
      if (type === 'text') {
        togglePassword.innerHTML = `
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3.707 2.293a1 1 0 00-1.414 1.414l14 14a1 1 0 001.414-1.414l-1.473-1.473A10.014 10.014 0 0019.542 10C18.268 5.943 14.478 3 10 3a9.958 9.958 0 00-4.512 1.074l-1.78-1.781zm4.261 4.26l1.514 1.515a2.003 2.003 0 012.45 2.45l1.514 1.514a4 4 0 00-5.478-5.478z" clip-rule="evenodd"></path>
            <path d="M12.454 16.697L9.75 13.992a4 4 0 01-3.742-3.741L2.335 6.578A9.98 9.98 0 00.458 10c1.274 4.057 5.065 7 9.542 7 .847 0 1.669-.105 2.454-.303z"></path>
          </svg>
        `;
      } else {
        togglePassword.innerHTML = `
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
            <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
          </svg>
        `;
      }
    });
    
    // Formulario de login
    document.getElementById('phidias-form')?.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const username = document.getElementById('username').value;
      const password = document.getElementById('password').value;
      
      // Simulación de login
      if (username && password) {
        // Mostrar loading
        const submitBtn = e.target.querySelector('button[type="submit"]');
        const originalText = submitBtn.textContent;
        submitBtn.textContent = 'Iniciando sesión...';
        submitBtn.disabled = true;
        
        // Simular delay de autenticación
        setTimeout(() => {
          alert('Funcionalidad de login en desarrollo. Redirigiendo al portal Phidias...');
          // Aquí iría la lógica real de autenticación
          window.open('https://colmilgeneralsantander.phidias.co/', '_blank');
          closePhidiasModal();
          
          // Restaurar botón
          submitBtn.textContent = originalText;
          submitBtn.disabled = false;
        }, 1500);
      }
    });
    
    // Smooth scroll para los enlaces
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const targetId = this.getAttribute('href').substring(1);
        const targetElement = document.getElementById(targetId);
        if (targetElement) {
          const headerHeight = completeHeader.offsetHeight;
          const targetPosition = targetElement.offsetTop - headerHeight;
          
          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth'
          });
        }
        
        // Cerrar menú móvil si está abierto
        if (!mobileMenu.classList.contains('hidden')) {
          mobileMenu.classList.add('hidden');
          const spans = mobileMenuBtn.querySelectorAll('span');
          spans[0].style.transform = 'rotate(0deg)';
          spans[1].style.opacity = '1';
          spans[2].style.transform = 'rotate(0deg)';
        }
      });
    });
  });
</script>
