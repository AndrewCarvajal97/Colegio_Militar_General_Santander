// Header component mejorado
---

<!-- Header completo fijo incluyendo certificaciones -->
<div class="fixed w-full top-0 z-50 bg-white shadow-lg transition-all duration-300" id="complete-header">
  <!-- Barra superior con certificaciones -->
  <div class="bg-gray-100 border-b border-gray-200 py-2">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between text-sm">
        <div class="flex items-center space-x-6">
          <div class="flex items-center space-x-2">
            <span class="text-gray-600">Certificaciones:</span>
            <div class="flex items-center space-x-4">
              <div class="flex items-center space-x-2 bg-white px-3 py-1 rounded border">
                <img src="/iso-icon.svg" alt="ISO" class="w-6 h-6" />
                <div class="flex items-center space-x-1">
                  <div class="w-6 h-6 bg-blue-600 rounded flex items-center justify-center">
                    <span class="text-white text-xs font-bold">ISO</span>
                  </div>
                  <span class="text-xs font-medium">9001:2015</span>
                </div>
              </div>
              <div class="flex items-center space-x-2 bg-white px-3 py-1 rounded border">
                <img src="/icontec-icon.svg" alt="ICONTEC" class="w-6 h-6" />
                <div class="flex items-center space-x-1">
                  <div class="w-6 h-6 rounded flex items-center justify-center" style="background-color: rgb(52, 183, 13);">
                    <span class="text-white text-xs font-bold">IC</span>
                  </div>
                  <span class="text-xs font-medium">ICONTEC</span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="flex items-center space-x-4 text-xs text-gray-600">
          <span>📞 (607) 7008460</span>
          <span>📧 info@colmilgeneralsantander.edu.co</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Navbar principal -->
  <div class="bg-white">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between py-4">
        <!-- Logo y nombre del colegio -->
        <div class="flex items-center space-x-4">
          <div class="w-16 h-16 rounded-full flex items-center justify-center" >
            <img src="/label-removebg-preview.webp" alt="">
          </div>
          <div>
            <h1 class="text-xl font-bold font-playfair" style="color: #5771FE;">
              Colegio Militar General Santander
            </h1>
            <p class="text-sm text-gray-600 font-medium">
              Patria, Superación y Orden
            </p>
          </div>
        </div>

        <!-- Navegación desktop -->
        <nav class="hidden lg:flex items-center space-x-8">
          <a href="#inicio" class="nav-link text-gray-700 font-medium transition-colors duration-300">
            Inicio
          </a>
          <a href="#nosotros" class="nav-link text-gray-700 font-medium transition-colors duration-300">
            Nosotros
          </a>
          <a href="#historia" class="nav-link text-gray-700 font-medium transition-colors duration-300">
            Historia
          </a>
          <a href="#niveles" class="nav-link text-gray-700 font-medium transition-colors duration-300">
            Niveles
          </a>
          <a href="#admisiones" class="nav-link text-gray-700 font-medium transition-colors duration-300">
            Admisiones
          </a>
          <a href="#contacto" class="nav-link text-gray-700 font-medium transition-colors duration-300">
            Contacto
          </a>
          <a href="#contacto" class="text-white px-6 py-2 rounded-lg font-medium transition-colors duration-300" 
             style="background-color: rgb(52, 183, 13);" 
             onmouseover="this.style.backgroundColor='rgb(42, 153, 11)'" 
             onmouseout="this.style.backgroundColor='rgb(52, 183, 13)'">
            Información
          </a>
        </nav>

        <!-- Botón menú móvil -->
        <button class="lg:hidden flex flex-col space-y-1 p-2" id="mobile-menu-btn">
          <span class="w-6 h-0.5 bg-gray-700 transition-all duration-300"></span>
          <span class="w-6 h-0.5 bg-gray-700 transition-all duration-300"></span>
          <span class="w-6 h-0.5 bg-gray-700 transition-all duration-300"></span>
        </button>
      </div>

      <!-- Menú móvil -->
      <div class="lg:hidden hidden" id="mobile-menu">
        <div class="py-4 border-t border-gray-200">
          <nav class="flex flex-col space-y-4">
            <a href="#inicio" class="nav-link text-gray-700 font-medium px-4 py-2 transition-colors duration-300">
              Inicio
            </a>
            <a href="#nosotros" class="nav-link text-gray-700 font-medium px-4 py-2 transition-colors duration-300">
              Nosotros
            </a>
            <a href="#historia" class="nav-link text-gray-700 font-medium px-4 py-2 transition-colors duration-300">
              Historia
            </a>
            <a href="#niveles" class="nav-link text-gray-700 font-medium px-4 py-2 transition-colors duration-300">
              Niveles
            </a>
            <a href="#admisiones" class="nav-link text-gray-700 font-medium px-4 py-2 transition-colors duration-300">
              Admisiones
            </a>
            <a href="#contacto" class="nav-link text-gray-700 font-medium px-4 py-2 transition-colors duration-300">
              Contacto
            </a>
            <a href="#contacto" class="text-white px-6 py-2 rounded-lg font-medium mx-4 transition-colors duration-300" style="background-color: rgb(52, 183, 13);">
              Información
            </a>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .nav-link:hover {
    color: #5771FE !important;
  }
</style>

<script>
  // JavaScript para el menú móvil y efectos del header
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const completeHeader = document.getElementById('complete-header');

    // Toggle menú móvil
    mobileMenuBtn.addEventListener('click', function() {
      mobileMenu.classList.toggle('hidden');
      
      // Animar el botón hamburguesa
      const spans = mobileMenuBtn.querySelectorAll('span');
      if (mobileMenu.classList.contains('hidden')) {
        spans[0].style.transform = 'rotate(0deg)';
        spans[1].style.opacity = '1';
        spans[2].style.transform = 'rotate(0deg)';
      } else {
        spans[0].style.transform = 'rotate(45deg) translate(5px, 5px)';
        spans[1].style.opacity = '0';
        spans[2].style.transform = 'rotate(-45deg) translate(7px, -6px)';
      }
    });

    // Efectos de scroll en el header (opcional)
    window.addEventListener('scroll', function() {
      if (window.scrollY > 100) {
        completeHeader.classList.add('shadow-xl');
      } else {
        completeHeader.classList.remove('shadow-xl');
      }
    });

    // Smooth scroll para los enlaces
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const targetId = this.getAttribute('href').substring(1);
        const targetElement = document.getElementById(targetId);
        if (targetElement) {
          const headerHeight = completeHeader.offsetHeight;
          const targetPosition = targetElement.offsetTop - headerHeight;
          
          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth'
          });
        }
        
        // Cerrar menú móvil si está abierto
        if (!mobileMenu.classList.contains('hidden')) {
          mobileMenu.classList.add('hidden');
          const spans = mobileMenuBtn.querySelectorAll('span');
          spans[0].style.transform = 'rotate(0deg)';
          spans[1].style.opacity = '1';
          spans[2].style.transform = 'rotate(0deg)';
        }
      });
    });
  });
</script>
