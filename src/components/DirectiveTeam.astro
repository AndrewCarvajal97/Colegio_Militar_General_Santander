<style>
  /* Animaciones para las tarjetas de directivos */
  .directive-card {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out forwards;
  }
  
  .directive-card:nth-child(1) { animation-delay: 0.1s; }
  .directive-card:nth-child(2) { animation-delay: 0.2s; }
  .directive-card:nth-child(3) { animation-delay: 0.3s; }
  .directive-card:nth-child(4) { animation-delay: 0.4s; }
  
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Efectos hover mejorados */
  .directive-card:hover {
    transform: translateY(-8px) scale(1.02);
  }
  
  /* Responsive improvements */
  @media (max-width: 768px) {
    .directive-card h3 {
      font-size: 1.125rem;
    }
    
    .directive-card .relative.h-64 {
      height: 12rem;
    }
  }
  
  /* Animación de scroll reveal */
  .scroll-reveal {
    opacity: 0;
    transform: translateY(50px);
    transition: all 0.8s ease-out;
  }
  
  .scroll-reveal.revealed {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Mejoras en los badges */
  .directive-card .absolute.top-4 {
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }
  
  /* Efectos de hover en imágenes */
  .directive-card img {
    filter: brightness(1) contrast(1.1);
    transition: all 0.5s ease;
  }
  
  .directive-card:hover img {
    filter: brightness(1.1) contrast(1.2) saturate(1.1);
  }
  
  /* Líneas decorativas animadas */
  .directive-card .w-full.h-px {
    background: linear-gradient(90deg, transparent, #e5e7eb, transparent);
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }
  
  .directive-card:hover .w-full.h-px {
    opacity: 1;
    background: linear-gradient(90deg, transparent, #5771FE, transparent);
  }
</style>

<script>
  // Animación de scroll reveal para la sección
  function initDirectivesAnimation() {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('revealed');
        }
      });
    }, observerOptions);

    // Observar elementos para animar
    const scrollElements = document.querySelectorAll('.scroll-reveal');
    scrollElements.forEach(el => observer.observe(el));
  }

  // Inicializar cuando el DOM esté listo
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initDirectivesAnimation);
  } else {
    initDirectivesAnimation();
  }

  // Analytics para clicks en directivos (opcional)
  document.querySelectorAll('.directive-card').forEach(card => {
    card.addEventListener('click', function() {
      const name = this.querySelector('h3').textContent.trim();
      console.log(`Usuario hizo clic en directivo: ${name}`);
      
      // Aquí puedes agregar lógica adicional como mostrar más información
      // o abrir un modal con detalles del directivo
    });
  });
</script>
