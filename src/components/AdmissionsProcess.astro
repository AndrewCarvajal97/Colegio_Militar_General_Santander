<style>
  /* Animaciones para las tarjetas */
  .admission-card {
    opacity: 0;
    transform: translateY(50px);
    animation: slideInUp 0.8s ease-out forwards;
  }
  
  .admission-card:nth-child(1) { animation-delay: 0.1s; }
  .admission-card:nth-child(2) { animation-delay: 0.2s; }
  .admission-card:nth-child(3) { animation-delay: 0.3s; }
  .admission-card:nth-child(4) { animation-delay: 0.4s; }
  .admission-card:nth-child(5) { animation-delay: 0.5s; }
  
  @keyframes slideInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Efectos hover mejorados */
  .admission-card:hover {
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }
  
  /* Animaciones de elementos internos */
  .grade-item:hover {
    transform: translateX(5px);
  }
  
  .requirement-item:hover .w-6 {
    transform: scale(1.1);
  }
  
  .military-item:hover .w-2 {
    transform: scale(1.5);
  }
  
  .exam-item:hover .w-8 {
    transform: rotate(5deg);
  }
  
  .interview-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(147, 51, 234, 0.15);
  }
  
  /* Botón de descarga */
  .download-btn:hover {
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
  }
  
  /* Responsive improvements */
  @media (max-width: 768px) {
    .admission-card {
      margin-bottom: 1rem;
    }
    
    .admission-card .lg\:col-span-2 {
      grid-column: span 1;
    }
  }
  
  /* Animación de scroll reveal */
  .scroll-reveal {
    opacity: 0;
    transform: translateY(50px);
    transition: all 0.8s ease-out;
  }
  
  .scroll-reveal.revealed {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Gradientes de fondo para tarjetas */
  .admission-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
    z-index: 1;
  }
  
  .admission-card:hover::before {
    left: 100%;
  }
</style>

<script>
  // Funcionalidad para el proceso de admisiones
  function initAdmissionsProcess() {
    // Animación de scroll reveal
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('revealed');
        }
      });
    }, observerOptions);

